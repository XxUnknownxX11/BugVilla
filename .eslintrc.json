{
  "env": {
    "node": true,
    "browser": true
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": "off",
    "security/detect-eval-with-expression": "error",
    "prefer-const": "warn"
  },
  "ignorePatterns": [
    "*.spec.js",
    "*.test.js",
    "*.d.ts",
    "dist",
    "client",
    "build"
  ],
  "plugins": ["security", "prettier"],
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:node/recommended",
    "plugin:security/recommended"
  ]
}
